{
	"languages": {
		"JavaScript": {
			"formatter": {
				"external": {
					"command": "eslint",
					"arguments": ["--fix", "--no-warn-ignored"]
				}
			},
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		}
	},
	"format_on_save": "off",
	"eslint.rules.ignore": ["index.js", "docs/assets/main.js", "**/*.min.js"]
}
