{
	"languages": {
		"JavaScript": {
			"formatter": {
				"external": {
					"command": "eslint",
					"arguments": ["--fix", "--no-warn-ignored"]
				}
			},
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		}
	},
	"format_on_save": "on",
	"eslint.rules.ignore": [
		"index.js",
		"**/*.min.js",
		"docs/assets/main.js",
		"test/components/main.js"
	]
}
